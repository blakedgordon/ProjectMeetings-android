<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.calbaptist.android.projectmeetings.MeetingCreationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.calbaptist.android.projectmeetings.MeetingCreationActivity">

        <EditText
            android:id="@+id/MeetingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meetingName"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/MeetingObjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meetingObjective"
            android:inputType="text"
            android:layout_below="@id/MeetingName"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/MeetingObjective"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_meeting_button_row"
            android:layout_margin="5dp">
            <Button
                android:id="@+id/button_date_picker"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Date"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/button_drive_folder"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Invalid Folder"
                style="@style/Widget.AppCompat.Button.Colored" />
        </LinearLayout>

        <TextView
            android:id="@+id/time_picker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_meeting_button_row"
            android:layout_centerHorizontal="true"
            android:text="Length (in minutes):"
            android:textSize="15dp"/>

        <NumberPicker
            android:id="@+id/np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_picker_text"
            android:layout_centerHorizontal="true" />

        <!--<DatePicker-->
            <!--android:id="@+id/Date"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:calendarViewShown="false"-->
            <!--android:datePickerMode="spinner"-->
            <!--android:headerBackground="@color/colorPrimaryDark"-->
            <!--android:layout_below="@id/MeetingObjective"-->
            <!--android:layout_centerHorizontal="true"/>-->

        <!--<TimePicker-->
            <!--android:id="@+id/Time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:headerBackground="@color/colorPrimaryDark"-->
            <!--android:timePickerMode="spinner"-->
            <!--android:layout_below="@id/Date"-->
            <!--android:layout_centerHorizontal="true"/>-->


        <!--<EditText-->
            <!--android:id="@+id/Length"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="@string/length"-->
            <!--android:inputType="number"-->
            <!--android:layout_below="@id/np"-->
            <!--android:layout_marginEnd="10dp"-->
            <!--android:layout_marginStart="10dp"/>-->

        <EditText
        android:id="@+id/add_invites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Invite by email (seperate by commas)"
        android:inputType="text"
        android:layout_below="@id/np"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/remove_invites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Uninvite by email (seperate by commas)"
            android:inputType="text"
            android:layout_below="@id/add_invites"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_below="@id/remove_invites"
            android:layout_margin="20dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <ProgressBar
            android:id="@+id/edit_meeting_spinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Submit"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:layout_margin="10dp"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>
