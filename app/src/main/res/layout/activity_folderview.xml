<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.calbaptist.android.projectmeetings.FolderViewActivity">

    <TextView
        android:id="@+id/SelectFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectFolders" />

    <Button
        android:id="@+id/CreateFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_folder"
        android:layout_below="@id/SelectFolder" />

    <fragment
        android:id="@+id/fragment1"
        android:name="edu.calbaptist.android.projectmeetings.FolderListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CreateFolder" />


</RelativeLayout>